<h1>Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><%= task.completed ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Show', task_path(task), class: "btn btn-info btn-sm" %>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Delete', destroy_task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary" %>
